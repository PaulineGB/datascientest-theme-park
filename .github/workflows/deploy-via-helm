helm-lint:
    name: Helm lint and release
    runs-on: ubuntu-latest
    needs: build

    steps:
      - uses: actions/checkout@v2
      - name: Helm Lint
        uses: WyriHaximus/github-action-helm3@v2
        with:
          exec: helm lint ./helm-chart
      - name: Helm install
        uses: WyriHaximus/github-action-helm3@v2
        with:
          exec: helm upgrade --install github-magnolia-docker ./helm-chart
          kubeconfig: '${{ secrets.KUBECONFIG }}'


deploy:
    runs-on: ubuntu-latest
    steps:
      - name: setup AWS credentials
        uses: aws-actions/configure-aws-credentials@v4
        with: 
          aws-region: eu-west-3
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
      - name: setup kubeconfig
        run: |
          aws eks update-kubeconfig --region eu-west-3 --name tmptpr
      - name: kubectl get all
        run: |
          kubectl get all
#     - name: deploy 2 pods on dev
#       run: |
#          kubectl -n dev create deployment tpr --image p0l1na/themeparkride --replicas 2
      - name: deploy hello world on dev
        run: |
          sed -i "s/CI_PIPELINE_IID/${{ github.run_id }}/" ./src/main/resources/application.yml
          sed -i  's/version: \([0-9].*\)/${{GITHUB_RUN_NUMBER}}/' ./helm-chart/Chart.yml;
          sed -i  's/appVersion: \("[0-9].*\)/appVersion: "${{GITHUB_RUN_NUMBER}}"/' ./helm-chart/Chart.yml;
          helm repo add examples https://helm.github.io/examples
          helm install -n dev  hello-world examples/hello-world --set service.port=3380
          helm install ./chart-helm
